{
  "root": {
    "src": "src",
    "dest": "public"
  },

  "tasks": {
    "css": {
      "src": "scss",
      "dest": "css",
      "gzip": true,
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": []
      },
      "extensions": ["sass", "scss", "css"]
    },
    "browserify": {
      "src": "js/entry.js",
      "dest": "js/bundle.js",
      "gzip": true,
      "transforms": {
        "ractify": {
          "extension": "html"
        }
      }
    },
    "copy": [
      {
        "src": "static/*",
        "base": "static",
        "dest": "."
      }
    ]
  }
}